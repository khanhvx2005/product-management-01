extends ../../layouts/default.pug
include ../../mixins/table-tree.pug
block main 
    
    section.content-section
        h3 Quản Lý Danh Mục Sản Phẩm
        
        .filter-controls-bar
            
            form(class = "search-box" form-search)
                input(
                    placeholder="Nhập từ khóa" 
                    type="text"
                    name = "keyword"
                    value = keyword
                    )
                i(class="fas fa-search" type ="submit")
            
                        
                    
            a(class="btn-primary-add" type = "button" href = "/admin/products-category/create")
                i.fas.fa-plus
                | Thêm Danh Mục
    .product-list-table
        table(class="table-checkbox")
            thead
                tr
                    th STT
                    th Ảnh
                    th Tên Danh Mục
                    th Vị trí
                    th Trạng Thái
                    th(style = "text-align:center") Hành động
            tbody
                +table-tree(records)
    
